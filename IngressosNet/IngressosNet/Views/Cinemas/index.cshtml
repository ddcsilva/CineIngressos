@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "Lista de Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Nome" style="max-width: 150px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Editar</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Detalhes</a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i> Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
@model IEnumerable<Ator>

@{
    ViewData["Title"] = "Lista de Atores";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.FotoDoPerfil)</th>
                    <th>@Html.DisplayNameFor(model => model.NomeCompleto)</th>
                    <th>@Html.DisplayNameFor(model => model.Biografia)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.FotoDoPerfil" alt="@item.NomeCompleto" style="max-width: 150px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.NomeCompleto)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Biografia)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Atores" asp-action="Editar" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Editar</a> |
                            <a class="btn btn-outline-info" asp-controller="Atores" asp-action="Detalhes" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i> Detalhes</a> |
                            <a class="btn btn-danger text-white" asp-controller="Atores" asp-action="Remover" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Atores" asp-action="Criar" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Novo
    </a>
</div>
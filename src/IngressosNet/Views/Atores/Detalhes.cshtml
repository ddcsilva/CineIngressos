@model Ator

@{
    ViewData["Title"] = "Detalhes do Ator";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Detalhes do Ator @Model.NomeCompleto</h1>
            <div class="form-group text-center">
                <img id="VisualizacaoDaFotoDoPerfil" class="border-info rounded-circle" style="max-width: 150px" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="FotoDoPerfil" class="control-label"></label>
                <input asp-for="FotoDoPerfil" class="form-control" readonly />
                <span asp-validation-for="FotoDoPerfil" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NomeCompleto" class="control-label"></label>
                <input asp-for="NomeCompleto" class="form-control" readonly />
                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Biografia" class="control-label"></label>
                <textarea asp-for="Biografia" class="form-control" rows="4" readonly></textarea>
                <span asp-validation-for="Biografia" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-between">
                <a class="btn btn-outline-secondary" asp-action="Index">Exibir Todos</a>
                <a class="btn btn-outline-success" asp-action="Editar" asp-route-id="@Model.Id">Editar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('VisualizacaoDaFotoDoPerfil');
            output.src = $("#FotoDoPerfil").val();
        })
    </script>
}